<!-- faqs.njk -->
<section data-scroll-section>  
  
  
  <div class="container-5  pbr-64 ptr-64">
      <div class="row mb-64 text-center">
        <div class="col-xs-12">
          <div class="fluid-5-l mb-24">
            {{ global.faq_title }}
          </div>
          <div class="fluid-9-r mb-24">
            {{ global.faq_description }}
          </div>
        </div>
      </div>
  
  
      <div class="faq-section">
  
  
        <div class="accordion-wrap accordion-faqs">
          {% for item in global.faq %}
            <div class="accordion">
              <div class="accordion-inner p-16">
                <div class="accordion-header is-flex">
                  <div class="list-circle">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                      <title>down-arrow</title>
                      <g stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" fill="none" stroke="#212121" stroke-miterlimit="10">
                        <polyline points="2,7 12,17 22,7" transform="translate(0, 0)"></polyline>
                      </g>
                    </svg>
                  </div>
                  <div class="fluid-8-r">{{ item.faq_question }}</div>
                </div>
                <div class="accordion-content">
                  <div class="text-14-r mt-16">{{ item.faq_answer }}</div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
  
  
    </div>
</section>
